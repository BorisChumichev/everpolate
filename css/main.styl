html
  font-family 'Open Sans' sans-serif
  font-weight 200
  color #5d5d5d
  font-size 18px
  background-color #fefefe

pre, code
  font-family 'Source Code Pro' monospace
  font-size 0.96em

pre
  border-left 2px solid #abe3e3
  padding-left 10px


.container
  width 700px
  margin 0 auto
  padding-bottom 200px

a
  color #00acbe
  cursor pointer

a:hover
  color #bbd7da
  text-decoration none
  cursor pointer

h1, h2, h3, h4, h5, h6
  font-family 'Playfair Display' serif
  color #6e6e6e
  font-weight 400

h1
  font-weight 400
  font-size 90px
  text-align left
  margin 0.7em 0 1.6em -20px
  position relative

h1 i
  margin-right 0.1em
  color: #00acbe

h1 span
  position absolute
  font-size 0.23em
  font-family 'Open Sans' sans-serif
  letter-spacing 0.1em
  font-weight 200
  top 130px
  left 130px

h2
  font-weight 400
  font-size 2.4em
  margin-top 2em

h3
  font-size 1.5em
  font-weight 400
  margin-top 3em

 h4
  font-size 1.2em

.math
  color #636363

p, ul
  line-height 1.8em

.emphasis
  font-weight 400

